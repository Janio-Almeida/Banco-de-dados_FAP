VALUES ('53674', 'Ana Paula', 'F', null, '(81)98765-4321', 'Rua das Flores', 'Centro', '12345-678', '102', 'Ginecologista');


create table paciente(
cpf varchar(14) primary key,
nome varchar(100),
genero varchar(10),
data_de_nascimento date,
telefone_fixo varchar(20),
telefone_movel varchar(20)
);
SELECT * FROM paciente;
insert into paciente(cpf, nome, genero,data_de_nascimento, telefone_fixo, telefone_movel)
values('103.587.894-78', 'Noah da Silva', 'M', '1987-05-15', null, '(87)99897-3040');

INSERT INTO paciente (cpf, nome, genero, data_de_nascimento, telefone_fixo, telefone_movel)
VALUES ('111.222.333-44', 'Maria Silva', 'F', '1990-08-25', '1122-3344', '(79)95522-1133');

INSERT INTO paciente (cpf, nome, genero, data_de_nascimento, telefone_fixo, telefone_movel)
VALUES ('222.333.444-55', 'Ana Souza', 'F', '1985-03-12', '9988-7766', '(19)93344-5566');


create table consulta(
id_consulta int(20) primary key,
marcacao_data DATE,
marcacao_hora time,
receita varchar(100),
cpf_paciente varchar(14),
crm_medico varchar(20),
foreign key (cpf_paciente) references paciente (cpf),
foreign key (crm_medico) references medico (crm)
);

select * from consulta;

INSERT INTO consulta(id_consulta, marcacao_data, marcacao_hora, receita, cpf_paciente, crm_medico)
