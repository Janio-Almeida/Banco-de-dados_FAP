create database clinica_medica;
use clinica_medica;

create table medico(
crm varchar(20) PRIMARY KEY not null,
nome varchar(60) not null,
genero varchar(10),
telefone_fixo varchar(20),
telefone_movel varchar(20),
endereco_rua varchar(40),
endereco_bairro varchar(30),
endereco_numero_postal varchar(10),
endereco_numero_casa varchar(10),
especialidade varchar(40)
);
SELECT * FROM medico;

insert into medico(crm, nome, genero, telefone_fixo, telefone_movel, endereco_rua, endereco_bairro, endereco_numero_postal, endereco_numero_casa, especialidade)
values('12345','João miguel','M','3469-5020', null, 'Rua josé braz moscow', 'Piedade', '54.750.280', '1020', 'Cardiologia'); 

